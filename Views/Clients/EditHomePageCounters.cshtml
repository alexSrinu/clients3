@model List<Clients.Models.HomeClients>

@{
    ViewBag.Title = "EditHomePageCounters";
    Layout = "~/Views/_LayoutPage1.cshtml";
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
}

<h2>EditHomePageCounters</h2>

@using (Html.BeginForm("EditHomePageCounters", "Clients", FormMethod.Post))
{


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    foreach (var item in Model)
    {
        <div class="form-group">
            @Html.LabelFor(model => item.TextEn, "TextEn")
            @Html.TextBoxFor(model => item.TextEn, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => item.TextEn, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => item.Value, "Value")
            @Html.TextBoxFor(model => item.Value, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => item.Value, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => item.ImagePath, "ImagePath")
            @Html.TextBoxFor(model => item.ImagePath, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => item.ImagePath, "", new { @class = "text-danger" })
        </div>




    }

    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-primary" />
    </div>
}

































